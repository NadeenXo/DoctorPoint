<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoctorPoint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:layout_marginStart">135dp</item>
        <item name="android:layout_marginEnd">136dp</item >
        <item name="android:layout_height">60dp</item >
        <item name="android:layout_width">306dp</item >

        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="background">@drawable/my_button</item>
    </style>
    <style name="Button.green" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/greenish_cyan</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Button.white" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/greenish_cyan</item>

    </style>
    <style name="TextViewStyle_signIn_signUp" >
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/small_font</item>
        <item name="android:drawableTint">@color/light_gray</item>

    </style>

</resources>